	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
  ca = "commit --amend"
  co = "checkout"

  l = "pull"
  lo = "pull origin"
  lom = "pull origin master"

  p = "push"
  pf = "push --force-with-lease"
  pu = "push -u"
  po = "push origin"
  pou = "push -u origin HEAD"

  open = "push -u origin HEAD"

  rb = "rebase"

