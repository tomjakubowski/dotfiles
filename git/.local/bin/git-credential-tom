#!/bin/bash

hostname=$(hostname)
me=$0

# Turns out if you use system git on macOS, you don't actually need this.  It will
# override your setting and use the osxkeychain helper.

case $hostname in
  tomstation) exec /usr/lib/git-core/git-credential-libsecret "$@"; ;;
  *) echo "Unknown host for credential helper, add to $me"; exit 1 ;;
esac

